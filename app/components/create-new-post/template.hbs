<h3>Create a New Post</h3>

<form id="NewPost">
    <p>
      {{input value=title placeholder="Title"}}
      {{input value=author placeholder="Author"}}
    </p>
    <p>
      {{textarea value=text placeholder="Content" rows="10" cols="140"}}
    </p>
    <p>
        <button {{action "createPost" newPost}}>Publish</button>
    </p>
</form>

{{yield}}
